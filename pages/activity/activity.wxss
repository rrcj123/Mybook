/* pages/activity/activity.wxss */

.header{
    height: 60rpx;
    line-height: 60rpx;
    padding: 30rpx;
    background:#f5f5f5;
    position: relative;
    color: #0b9fff;
    font-size: 30rpx;
}
.city{
    padding: 0 20rpx;
    margin-right: 20rpx;
    font-size: 38rpx;
    color: #000;
    border-right: 1px solid #000;
    display: inline-block;
}
.city image{
    width: 32rpx;
    height: 32rpx;
}
.activityFace{
    width: 100%;
    height: 430rpx;
    position: relative;
}
.activityFace image{
    height: 100%;
    width: 100%;
}
.activityTitle{
    position: absolute;
    bottom: 20rpx;
    left: 20rpx;
    color: #fff;
    font-size: 38rpx;
}
.addressTime{
    font-size: 30rpx;
    padding: 20rpx 30rpx;
    border-bottom: 40rpx solid #f5f5f5;
}
.activityAddress,
.activityTime{
    color: #919191;
    margin-bottom: 24rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
}
.activityAddress image,
.activityTime image{
    margin-right: 10rpx;
    width: 40rpx;
    height: 40rpx;
}
.joinPeople{
    height: 78rpx;
    line-height: 70rpx;
}
.peopleAvatar{
    height: 100%;
    float: left;
}
.joinPeople image{
    width: 78rpx;
    height: 100%;
    border-radius: 50%;
    margin-right: 5rpx;
}