/* pages/search/search.wxss */
page{
  background: #ddd;
}
.tupian{
  width: 100%;
  height: 300rpx;
  position: fixed;
  top: 0;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx; 
  margin-bottom:20rpx; 
}
.box{
  margin-top: 300rpx;
  display: flex;
}
.left{
  position: fixed;
  top: 320rpx;
  left: 0;
  display: flex;
  flex-direction: column;
  width: 20%;
}
.tltle{
  padding: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 15px;
  background: #fff;
  border: 1rpx solid #999;
  border-left: 0px solid #999;
  
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
}
.active{
  background: #ddd;
  color: indianred;
}
.right{
  padding-top: 0rpx;
  padding-left: 20%;
  width: 80%;
  display: flex;
  flex-wrap: wrap; 
}
.bookItem{
  width: 33.33%;
  float: left;
  position: relative;
}

.bookItem image{
  width: 100%;
  height: 200rpx;
  box-shadow: 0px 0px 20rpx  #ddd;
  border-radius: 5px;
  border: 2px solid #999;

}
.groupImg{
  height: 250rpx;
  width: 80%;
  background: #ddd;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  margin:0 auto;
}

.imgBox{
  width: 100%;
  height: 100%;
}
.imgBox image{
  height: 90%;
  width: 90%;
}
.bookTitle{
  display: block;
  width: 80%;
  padding: 20rpx 10%;
  font-size: 26rpx;
  height: 40px;
}
.last{
  text-align: center;
  font-size: 10px;
}
.yin{
  display: none;
}


