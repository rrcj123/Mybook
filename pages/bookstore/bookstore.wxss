/*header*/
.title{
text-align: center;
font-size: 10px;
}
.container{
  margin-bottom: 80rpx;
}
/*类别*/
.bookClass{
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  flex-wrap:wrap;
  justify-content:flex-start;
}
.bookItem{
  width: 33.33%;
  float: left;
  position: relative;
}

.bookItem image{
  width: 90%;
  height: 300rpx;
  box-shadow: 0px 0px 20rpx #ccc;
}
.groupImg{
  height: 300rpx;
  width: 90%;
  background: #ccc;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  margin:0 auto;
}

.imgBox{
  width: 100%;
  height: 100%;
  position: relative;
}
.imgBox image{
  height: 100%;
  width: 100%;
}
.bookTitle{
  display: block;
  width: 80%;
  padding: 20rpx 10%;
  font-size: 26rpx;
}
/*书本操作*/
.handleBook{
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  background: #fff;
  z-index: 1000;
}
.handleOption{
  float: left;
  width: 100%;
  background: rgba(0, 0, 0, 0.2);
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.handleOption image{
  width: 42rpx;
  height: 42rpx;
  margin-right: 10rpx;
}
.inline-block.imgBox .shanchu{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5) url(https://img.rrcj123.com/book/imgs/shanchu.png) no-repeat 50% 50%;
}